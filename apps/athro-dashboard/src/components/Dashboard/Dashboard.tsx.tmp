                  let bg = 'transparent';
                  let borderColor = '#e4c97e';
                  let color = '#e4c97e';
                  let opacity = 1;
                  if (quizReveal) {
                    if (isCorrect) {
                      bg = '#4fc38a44';
                      borderColor = '#4fc38a';
                      color = isSelected ? '#4fc38a' : '#e4c97e';
